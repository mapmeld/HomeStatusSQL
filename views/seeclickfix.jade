head
  meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
  title Macon SeeClickFix Map
  script(src='http://maps.googleapis.com/maps/api/js?sensor=false', type='text/javascript')
  script(src='/scripts/zoningmap.js', type='text/javascript')
  link(href='/stylesheets/zoningmap.css', rel='stylesheet', type='text/css')
  link(href='/stylesheets/bootstrap-mini.css', rel='stylesheet', type='text/css')
body(onload='init()', style='padding:6px')
  div.container(style="height:100%;")
    .row
      .span12
        h3 Macon SeeClickFix Mash-up
        strong Click on a marker to see SeeClickFix report, parcel info, and 2008 survey record
        div(style='float:right')
          input#placesearch.span4(type='text', placeholder='2068 ADAMS AVE, Macon, GA')
          a.btn.btn-info(onclick='searchAddress()', style='vertical-align:top') Search

    .row(style="height:85%;")
      #map.span12(style="height:100%;")